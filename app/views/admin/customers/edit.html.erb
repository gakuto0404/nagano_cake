<div class="container">
  <div class="alert-secondary">     <!-- ↓↓↓フルネームの書き方もっといいやり方がありそう -->
    <%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集
　</div>
  <div class="row">
    <div class="col-md-2">
      <%= form_with model: @customer, url: admin_customer_path(@customer) do |f| %>
        <div class="form-group row">
          <%= f.label "会員ID" %>
          <%= @customer.id %>
        </div>
        <div class="form-group row">
          <%= f.label "氏名" %>
          <%= f.text_field :last_name %>    <!-- 苗字 -->
          <%= f.text_field :first_name %>    <!-- 名前 -->
        </div>
        <div class="form-group row">
          <%= f.label "フリガナ" %>
          <%= f.text_field :last_name_kana %>    <!-- 苗字カタカナ -->
          <%= f.text_field :first_name_kana %>    <!-- 名前カタカナ -->
        </div>
        <div class="form-group row">
          <%= f.label "郵便番号" %>
          <%= f.text_field :postal_code %>
        </div>
        <div class="form-group row">
          <%= f.label "住所" %>
          <%= f.text_field :address %>
        </div>
        <div class="form-group row">
          <%= f.label "電話番号" %>
          <%= f.text_field :telephone_number %>
        </div>
        <div class="form-group row">
          <%= f.label "メールアドレス" %>
          <%= f.text_field :email %>
        </div>
        <div class="form-group row">
          <%= f.label "会員ステータス" %>
          <%= f.radio_button :is_active, :true %>
          <%= f.label :is_active, "有効" %>
          <%= f.radio_button :is_active, :false %>
          <%= f.label :is_active, "無効" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
