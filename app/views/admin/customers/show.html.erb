<div class="container">
  <div class="alert-secondary">
    <%= @customer.last_name %><%= @customer.first_name %>さんの会員情報
  </div>
  <div class="row">
    <div class="col-md-2">
      <div class="form-group row">
          <%= f.label "会員ID" %>
          <%= @customer.id %>
        </div>
        <div class="form-group row">
          <%= f.label "氏名" %>
          <%= @customer.last_name %>    <!-- 苗字 -->
          <%= @customer.first_name %>    <!-- 名前 -->
        </div>
        <div class="form-group row">
          <%= f.label "フリガナ" %>
          <%= @customer.last_name_kana %>    <!-- 苗字カタカナ -->
          <%= @customer.first_name_kana %>    <!-- 名前カタカナ -->
        </div>
        <div class="form-group row">
          <%= f.label "郵便番号" %>
          <%= @customer.ostal_code %>
        </div>
        <div class="form-group row">
          <%= f.label "住所" %>
          <%= @customer.address %>
        </div>
        <div class="form-group row">
          <%= f.label "電話番号" %>
          <%= @customer.telephone_number %>
        </div>
        <div class="form-group row">
          <%= f.label "メールアドレス" %>
          <%= @customer.email %>
        </div>
        <div class="form-group row">
          <%= f.label "会員ステータス" %>
          <% if @customer.is_active == true %>  <!-- if文での会員ステータス表示 -->
            <td>有効</td>
          <% else %>
            <td>無効</td>
          <% end %>
        </div>
    </div>
  </div>
</div>
