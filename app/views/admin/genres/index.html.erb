<div class="container">
  <dev class="alert-secondary">ジャンル管理画面</div>
  <div class="row">
    <div class="col-md-4">
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <%= f.label :ジャンル名 %>
        <%= f.text_field :name %>
        <%= f.submit '新規登録', class: "btn btn-primary" %>
      <% end %>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>