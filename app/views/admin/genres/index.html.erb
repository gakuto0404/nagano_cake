<div class="container">
 <dev class="alert-secondary">ジャンル管理画面</div>
  <div class="row">
   <div class="col-md-4">
    <%= form_with model: @genre do |f| %>
      <h3>
        <%= f.label :ジャンル名 %><br>
        <%= f.text_field :name %>
        <%= f.submit '新規登録', class: "btn btn-primary" %>
      </h3>
   <% end %>
   <table class="table">
    <thead>
      <tr>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |p| %>
       <tr>
        <td><%= p.genre_name %></td>
        <td><%= link_to '編集する', edit_admins_genre_path(p.id), class: "btn btn-success" %></td>
       </tr>
      <% end %>
    </tbody>
   </table>
  </div>
 </div>
</div>