<div class="container">
  <div class="row">
    <div class="col-md-8 mt-5">
      <h4 class="col-md-6"><span class="title alert-secondary">ジャンル管理画面</span></h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 mt-5">
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <table class="table table-borderless">
          <tr>
            <th><%= f.label :ジャンル名 %></th>
            <th><%= f.text_field :name %></th>
            <th><%= f.submit '新規登録', class: "btn btn-success" %></th>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 mt-5">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td align="center"><%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>