<div class="container">
  <div class="row">
    <div class="col-md-8 mt-5">
      <h4 class="col-md-6"><span class="title alert-secondary">注文履歴一覧</span></h4>
    </div>
  </div>
  <div class="row">
    <div class="mx-auto col-md-11 mt-3">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.reverse_each do |order| %>
            <tr>
              <td>
                <%=link_to edit_admin_order_path(order.id) do %>
                  <%= order.created_at.strftime("%Y/%m/%d %H:%M:%S") %>
                <% end %>
              </td>
              <td><%= order.customer.full_name %></td>
              <td><%= order.order_details.sum(:amount) %></td>
              <th><%= order.status_i18n %></th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>