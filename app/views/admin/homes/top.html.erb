<div class="container">
  <div class="alert-secondary">注文履歴一覧</div>
  <div class="row">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th scope="col">購入日時</th>
          <th scope="col">購入者</th>
          <th scope="col">注文個数</th>
        </tr>
      </thead>
      <% @orders.each do |order| %>
        <tbody>
          <tr>
            <td><%= link_to detail.created_at %></td>   <!-- 購入日時のちに注文履歴詳細リンクにする -->
            <td><%= @customer.name %></td>  <!-- 購入者名 -->
            <td><%= detail.amount %></td>  <!-- 注文個数 -->
          </tr>
        </tbody>
      <% end %>
      <%= paginate @os, class: "paginate" %>  <!-- ページネーション -->
    </table>
  </div>
</div>
