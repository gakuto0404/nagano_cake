<div class="container">
  <div class="alert-secondary">商品編集</div>
  <div class="row">
    <div class="col-md-">
      <%= form_with model: @item, url: admin_item_path(@item) do |f| %>
        <div class="form-group row">
          <th>商品画像</th>
          <td><%= f.file_field :image, accept: "image/*" %></td>
        </div>
        <div class="form-group row">
          <th>商品名</th>
          <td><%= f.text_field :name %></td>
        </div>
        <div class="form-group row">
          <th>商品説明</th>
          <td><%= f.text_area :introduction %></td>
        </div>
        <div class="form-group row">
          <th>ジャンル</th>
          <td><%= f.collection_select :genre_id, Genre.all, :id, :name %></td>
        </div>
        <div class="form-group row">
          <th>税抜価格</th>
          <td><%= f.number_field :price %>円</td>
        </div>
        <div class="form-group row">
          <th>販売ステータス</th>
          <td>
            <%= f.radio_button :is_active, :true %>
            <%= f.label :is_active, "販売中" %>
            <%= f.radio_button :is_active, :false %>
            <%= f.label :is_active, "販売停止中" %>
          </td>
        </div>
        <%= f.submit '変更を保存', class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>