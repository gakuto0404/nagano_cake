<div class="container">
  <div class="alert-secondary">商品一覧</div>
  <%= link_to "+",  new_admin_item_path, class: "fas fa-plus-circle fa-2x" %> <!-- FontAwesomeを使う(今は＋) -->
  <div class="row">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th scope="col">商品ID</th>
          <th scope="col">商品名</th>
          <th scope="col">税抜価格</th>
          <th scope="col">ジャンル</th>
          <th scope="col">ステータス</th>
        </tr>
      </thead>
      <% @items.each do |item| %>
        <tbody>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item.id) %></td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td>
              <% if item.is_active == true %>
                <td>販売中</td>
              <% else %>
                <td>販売停止中</td>
              <% end %>
            </td>
          </tr>
        </tbody>
      <% end %>
    </table>
    <%= paginate @items, class: "paginate" %>
  </div>
</div>



