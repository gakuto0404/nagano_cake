<div class="container">
  <div class="alert-secondary">商品一覧</div>
  <div class="row">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th scope="col">商品ID</th>
          <th scope="col">商品名</th>
          <th scope="col">税抜価格</th>
          <th scope="col">ジャンル</th>
          <th scope="col">ステータス</th>
        </tr>
      </thead>
      <% @items.each do |item| %>
        <tbody>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item.id) %></td>
            <td><%= item.price %></td>
            <td><%= ganre.name %></td>
            <td><%= item.status %></td>
          </tr>
        </tbody>
      <% end %>
    </table>
    <%= paginate @items, class: "paginate" %>
  </div>
</div>


  
