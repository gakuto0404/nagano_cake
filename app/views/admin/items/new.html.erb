<div class="container">
  <div class="alert-secondary">商品新規登録</div>
  <div class="row">
    <div class="col-md-5">
      <%= form_with model: @item, url: new_admin_item_path do |f| %>
        <div class="form-group row">
          <th>商品画像</th>
          <td><%= f.file_field :image, accept: "image/*" %></td>
        </div>
        <div class="form-group row">
          <th>商品名</th>
          <td><%= f.text_field :name %></td>
        </div>
        <div class="form-group row">
          <th>商品説明</th>
          <td><%= f.text_area :description %></td>
        </div>
        <div class="form-group row">
          <th>ジャンル</th>
          <td><%= f.collection_select :genre_id, Genre.all, :id, :genre_name %></td>
        </div>
        <div class="form-group row">
          <th>税抜価格</th>
          <td><%= f.number_field :price %>円</td>
        </div>
        <div class="form-group row">
          <th>販売ステータス</th>
          <td><%= f.select :is_active ,[['販売中',true],['販売停止中',false]] %></td>
        </div>
        <%= f.submit '新規登録', class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>