<div class="container">
  <div class="row">
    <div class="col-md-8 mt-5">
      <h4 class="col-md-6"><span class="title alert-secondary">商品新規登録</span></h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2"></div>
    <div class='col-md-10 mt-3'>
      <%= form_with model: @item, url: admin_items_path do |f| %>

        <!--商品画像-->
        <div class="form-group row">
          <%= f.label :image, "商品画像", class: "col-md-2 col-form-label" %>
          <%= f.file_field :image, accept: "image/*", class: "col-md-4 mt-" %>
        </div>

        <!--商品名-->
        <div class="form-group row">
          <%= f.label :name, "商品名", class: "col-md-2 col-form-label" %>
          <%= f.text_field :name, :placeholder => "商品名", class: "col-md-4 mt-1" %>
        </div>

        <!--商品説明-->
        <div class="form-group row">
          <%= f.label :address, "商品説明", class: "col-md-2 col-form-label" %>
          <%= f.text_area :introduction, :placeholder => "ここに説明文を記述します", size: "20x7", class: "col-md-4 mt-1" %>
        </div>

        <!--ジャンル-->
        <div class="form-group row">
          <%= f.label :genre_id, "ジャンル", class: "col-md-2 col-form-label" %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, class: "col-md-4 mt-1" %>
        </div>

        <!--税抜価格-->
        <div class="form-group row">
          <%= f.label :price, "税抜価格", class: "col-md-2 col-form-label" %>
          <%= f.number_field :price, :placeholder => "1000", class: "col-md-4 mt-1" %><div class="mt-2">円</div>
        </div>

        <!--販売ステータス-->
        <div class="form-group row">
          <%= f.label :is_active, "販売ステータス", class: "col-md-2 col-form-label" %>
          <div class="col-md-4 mt-2">
            <%= f.radio_button :is_active, :true %>
            <%= f.label :is_active, "販売中" %>
            <%= f.radio_button :is_active, :false %>
            <%= f.label :is_active, "販売停止中" %>
          </div>
        </div>

        <!--新規登録ボタン-->
        <div class="action ml-3">
          <%= f.submit "新規登録", class: "btn btn-action btn-success col-md-2 offset-md-2 mt-3" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
