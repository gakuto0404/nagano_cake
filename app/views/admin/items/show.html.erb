<div class="container">
  <div class="alert-secondary">商品詳細</div>
  <div class="row">
    <div class="col-md-3">
      <%= image_tag @item.image, size: "200x200" %>
    </div>
    <div class="col-md-9">
      <tr>
        <th>名商品</th>
        <td><%= @item.name %></td>
      </tr>
      <tr>
        <th>商品説明</th>
        <td><%= @item.introduction %></td>
      </tr>
      <tr>
        <th>ジャンル</th>
        <td><%= @item.genre.name %></td>
      </tr>
      <tr>
        <th>税抜価格</th>
        <td><%= @item.price %>円</td>
      </tr>
      <tr>
        <th>販売ステータス</th>
        <td>
          <% if @item.is_active == true %>
            <td>販売中</td>
          <% else %>
            <td>販売停止中</td>
          <% end %>
        </td>
      </tr>
      <%= link_to '編集する', edit_admin_item_path(@item.id), class: "btn btn-success" %>
    </div>
  </div>
</div>
