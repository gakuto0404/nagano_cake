<div class="container">
  <div class="row">
    <div class="col-md-8 mt-5">
      <h4 class="col-md-6"><span class="title alert-secondary">商品詳細</span></h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 mt-5">
      <%= image_tag @item.image, size: "200x200" %>
    </div>
    <div class="col-md-8 mt-5">
      <table class="table table-borderless">
        <tbody>

          <!--商品名-->
          <tr>
            <th>商品名</th>
            <td><%= @item.name %></td>
          </tr>

          <!--商品説明-->
          <tr>
            <th>商品説明</th>
            <td><%= @item.introduction %></td>
          </tr>

          <!--ジャンル-->
          <tr>
            <th>ジャンル</th>
            <td><%= @item.genre.name %></td>
          </tr>

          <!--税抜価格-->
          <tr>
            <th>税込価格</br>(税抜価格)</th>
            <td><%= @item.price %>円</td>
          </tr>

          <!--販売ステータス-->
          <tr>
            <th>販売ステータス</th>
            <% if @item.is_active == true %>
              <td>販売中</td>
            <% else %>
              <td>販売停止中</td>
            <% end %>
          </tr>
        </tbody>
      </table>
      <%= link_to '編集する', edit_admin_item_path(@item.id), class: "btn btn-success btn-success col-md-3 offset-md-2 mt-3" %>
    </div>
  </div>
</div>
