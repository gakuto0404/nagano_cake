<div class="container">
  <div class="row">
    <div class="col-md-8 mt-5">
      <h4 class="col-md-6"><span class="title alert-secondary">配送先編集</span></h4>
    </div>
  </div>
  <div class="row">
    <div class='mx-auto col-md-12 mt-3'>
      <%= form_with model: @address, url: public_address_path(@address) do |f| %>
      <!-- エラーメッセージを出したい　例:render "public/shared/error_messages", resource: resource -->

        <!--郵便番号-->
        <div class="form-group row">
          <%= f.label "郵便番号(ハイフンなし)", class: "col-md-3 col-form-label" %>
          <%= f.text_field :postal_code, class: "col-sm-3" %>
        </div>

        <!--住所-->
        <div class="form-group row">
          <%= f.label "住所", class: "col-md-3 col-form-label" %>
          <%= f.text_field :address, class: "col-sm-7" %>
        </div>

        <!--名前-->
        <div class="form-group row">
          <%= f.label "宛名", class: "col-md-3 col-form-label" %>
          <%= f.text_field :name, class: "col-sm-3" %>
          <!--内容変更ボタン-->
          <%= f.submit "変更内容を保存", class: "btn btn-action btn-success col-md-2 offset-md-3" %>
        </div>

      <% end %>
    </div>
  </div>
</div>
