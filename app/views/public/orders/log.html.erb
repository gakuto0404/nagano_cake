<div class="container">
  <div class="row">
    <div class="col-md-9 mt-5">
      <h4 class="col-md-6 mb-3"><span class="title alert-secondary">注文情報確認</span></h4>
    </div>
  </div>
  <div class="row">
    <div class='mx-auto col-md-12 mt-3'>
      <table class="table table-bordered cart_table">
        <thead>
          <tr>
            <th colspan="3">商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td colspan="3">
                <%= image_tag cart_item.item.get_profile_image(50, 50) %>
                <%= cart_item.item.name %>
              </td>
              <td><%= cart_item.item.with_tax_price%></td>  <!--単価(税込)-->
              <td><%= cart_item.amount %></td><!--仮-->     <!--数量-->
              <td><%= cart_item.subtotal%></td>             <!--小計-->
              <% @total += cart_item.subtotal %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 mt-2">
      <%= link_to "買い物を続ける", public_items_path, class: "btn btn-action btn-primary col-md-3 offset-md-2 mt-3" %>
    </div>
    <div class="col-md-4 mt-2">
      <table class="table table-bordered cart_table">
        <tr>
          <th>合計金額</th>
          <th><%= @total %></th>
        </tr>
      </table>
    </div>
    <div class='col-md-12 text-center mt-4'>
      <%= link_to "情報入力に進む", new_public_order_path, class: "btn btn-lg btn-success mt-3" %>
    </div>
  </div>
</div>
