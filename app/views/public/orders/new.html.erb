<div class="container">
  <div class="row">
    <div class="col-md-9 mt-5">
      <h4 class="col-md-6 mb-3"><span class="title alert-secondary">注文情報入力</span></h4>
    </div>
  </div>
  <%= form_with model: @order, url: public_orders_log_path, local: true do |f| %>
  <div class="row">
    <div class="mx-auto col-md-12 mt-3">
			<h3 class="new-items-title"><strong>支払方法</strong></h3>
		</div>
  </div>
  <div class="row">
    <div class="mx-auto col-md-11 mt-1">
			<%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
      <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %></br>
      <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
      <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
		</div>
  </div>
  <div class="row">
    <div class="mx-auto col-md-12 mt-3">
			<h3 class="new-items-title"><strong>お届け先</strong></h3>
		</div>
  </div>
  <div class="row">
    <div class="mx-auto col-md-11 mt-1">
    </div>
  </div>
  <% end %>
</div>