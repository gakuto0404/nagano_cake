<div class="container">
  <div class="row">
    <div class="col-md-8 mt-5">
      <h4 class="col-md-6"><span class="title alert-secondary">新規会員登録</span></h4>
    </div>
  </div>
  <div class="row">
    <div class='mx-auto col-md-12 mt-3'>
      <%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <!--名前-->
        <div class="form-group row">
          <%= f.label "名前", class: "col-md-3 col-form-label" %>
          <%= f.label :last_name, "(姓)", autofocus: true, class: "col-form-label col-sm-1" %>
          <%= f.text_field :last_name, :placeholder => "令和", class: "col-sm-3" %>
          <%= f.label :first_name, "(名)", class: "col-form-label col-sm-1" %>
          <%= f.text_field :first_name, :placeholder => "道子", class: "col-sm-3" %>
        </div>

        <!--フリガナ-->
        <div class="form-group row">
          <%= f.label "フリガナ", class: "col-md-3 col-form-label" %>
          <%= f.label :last_name_kana, "(セイ)", class: "col-form-label col-sm-1" %>
          <%= f.text_field :last_name_kana, :placeholder => "レイワ", class: "col-sm-3" %>
          <%= f.label :first_name_kana, "(メイ)", class: "col-form-label col-sm-1" %>
          <%= f.text_field :first_name_kana, :placeholder => "ミチコ", class: "col-sm-3" %>
        </div>

        <!--メールアドレス-->
        <div class="form-group row">
          <%= f.label :email, "メールアドレス", class: "col-md-4 col-form-label" %>
          <%= f.email_field :email, autocomplete: "email", :placeholder => "sample@example.com", class: "col-md-3" %>
        </div>

        <!--郵便番号-->
        <div class="form-group row">
          <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "col-md-4 col-form-label" %>
          <%= f.text_field :postal_code, :placeholder => "0000000", class: "col-md-3" %>
        </div>

        <!--住所-->
        <div class="form-group row">
          <%= f.label :address, "住所", class: "col-md-4 col-form-label" %>
          <%= f.text_field :address, :placeholder => "東京都渋谷区代々木神園町0-0", class: "col-md-7" %>
        </div>

        <!--電話番号-->
        <div class="form-group row">
          <%= f.label :telephone_number, "電話番号(ハイフンなし)", class: "col-md-4 col-form-label" %>
          <%= f.text_field :telephone_number,  :placeholder => "0000000000", class: "col-md-3" %>
        </div>

        <!--パスワード-->
        <div class="form-group row">
          <%= f.label :password, "パスワード(6文字以上)", class: "col-md-4 col-form-label" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "col-md-3" %>
        </div>

        <!--パスワード（確認用）-->
        <div class="form-group row">
          <%= f.label :password_confirmation, "パスワード(確認用)", class: "col-md-4 col-form-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-md-3" %>
        </div>

        <!--新規登録ボタン-->
        <div class="action ml-3">
          <%= f.submit "新規登録", class: "btn btn-action btn-success col-md-3 offset-md-4 mt-3" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 mt-3">
      <h4 class="col-md-6"><span class="title alert-secondary">既に登録済みの方</span></h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 mt-3 ml-5">
      <%= link_to 'こちら', new_customer_session_path %>からログインしてください。
    </div>
  </div>
</div>